{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PHP: Xdebug (Docker)",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/app": "${workspaceFolder}/php-services"
      }
    },
    {
      "name": "Go API: Attach (Docker)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "port": 2345,
      "host": "127.0.0.1"
    },
    {
      "name": "Go Gateway: Attach (Docker)",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/app",
      "port": 2346,
      "host": "127.0.0.1"
    },
    {
      "name": "Next.js: Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/frontend/apps/web"
    }
  ]
}
